---
 const { 
    src = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3879.2578310654294!2d-71.98033389999999!3d-13.5197625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x916dd7ce77a26e71%3A0x7bfc11d7218f7d74!2sAmerican%20trekking!5e0!3m2!1ses!2spe!4v1735391709121!5m2!1ses!2spe" 
} = Astro.props;
---
<div class="map-wrapper">
    <iframe 
        src={src} 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade">
    </iframe>
</div>

<style>
.map-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 50vh;
    border-radius: 8px;
    overflow: hidden;
    margin: 0;
}

.map-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
}
</style>